.login01
  .login02
    %div
      .logo=image_tag "logo_gris.png"
      %h2.loginTitle.py-4= t('.sign_up')
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :email, :class => "sr-only"
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", :class => 'textBox', placeholder: "E-mail"
        .field
          = f.label :password, :class => "sr-only"
          - if @minimum_password_length
            %em= t('devise.shared.minimum_password_length', count: @minimum_password_length)
          %br/
          = f.password_field :password, autocomplete: "new-password", :class => 'textBox', placeholder: "Ingrese su contraseña"
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", :class => 'textBox', placeholder: "Ingrese su contraseña de nuevo"
        .actions.py-4
          = f.submit t('.sign_up'), :class => 'botonLargo'
      = render "devise/shared/links"
