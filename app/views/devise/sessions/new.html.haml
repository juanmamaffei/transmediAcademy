.login01
  .login02
    %div
      .logo=image_tag "logo_gris.png"
      %h2.loginTitle.py-4= t('.sign_in')
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.label :email, :class => "sr-only"
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", :class => 'textBox', placeholder: "E-mail"
        .field
          = f.label :password, :class => "sr-only"
          %br/
          = f.password_field :password, autocomplete: "current-password", :class => 'textBox', placeholder: "ContraseÃ±a"
        - if devise_mapping.rememberable?
          .field.flex.items-center.justify-between.py-4
            .flex.items-center
              = f.check_box :remember_me, :class => "h-4 w-4 text-green-600 focus:ring border-gray-300 rounded"
              = f.label :remember_me, :class => "ml-2 block text-sm text-gray-900"
        .actions
          = f.submit t('.sign_in'), :class => 'botonLargo'
      = render "devise/shared/links"
