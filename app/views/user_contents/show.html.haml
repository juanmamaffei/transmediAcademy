%p#notice= notice

%p
  %b Markdowncontent:
-markdown = Redcarpet::Markdown.new(Redcarpet::Render::HTML, autolink: true, tables: true)
.md= raw(markdown.render(@user_content.markdownContent))
%p
  %b Type:
  = @user_content.content_type
%p
  %b Sticked:
  = @user_content.sticked
%p
  %b Claps:
  = @user_content.claps
%p
  %b Responseto:
  = @user_content.responseTo
%p
  %b User:
  = @user_content.user
%p
  %b Content:
  = @user_content.content

-unless current_user.permissions == nil
  -if current_user.permissions >= 50
  = link_to 'Edit', edit_content_user_content_path(@content,@user_content)
\|
= link_to 'Back', content_user_contents_path
