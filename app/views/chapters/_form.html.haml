= form_for [@course,@chapter] do |f|
  - if @chapter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@chapter.errors.count, "error")} prohibited this chapter from being saved:"
      %ul
        - @chapter.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :goals
    = f.number_field :goals
  .field
    = f.label :course
    = f.text_field :course
  .field
    = f.label :contents
    = f.number_field :contents
  .actions
    = f.submit 'Save'
