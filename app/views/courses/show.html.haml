.overflow-hidden
  %main.jumbo
    .sm:text-center
      %h1.text-4xl.font-extrabold.tracking-light.text-gray-900.sm:text-5xl.md:text-6xl
        = @course.name
      %p.mt-3.text-gray-500.sm:text-lg.sm:max-w-xl.sm:mx-auto.md:mt-5.md:text-xl
        = @course.description
      .mt-5.sm:mt-8.sm:flex.sm:justify-center
        -if @permissions >= 10
          .mt-3.sm:mt-0.sm:ml-3
            =link_to "Ver programa", course_chapters_url(@course), :class => "botonSecundario"
        -else
          .rounded-md.shadow
            =link_to "¡Quiero entrar!", new_lead_path(:course => @course), :class => "botonAccion"

          
        
    .flex.flex-wrap-mx-3.overflow-hidden
      .my-3.px-3.overflow-hidden{:class => "w-1/3"}
        .font-medium.text-lg.leading-6.font-1 Categoría:
        .text-base= @course.category
      .my-3.px-3.overflow-hidden{:class => "w-1/3"}
        .font-medium.text-lg.leading-6.font-1 Costo:
        .text-base= "USD " + @course.price.to_s 
      .my-3.px-3.overflow-hidden{:class => "w-1/3"}
        .font-medium.text-lg.leading-6.font-1 Duración:
        .text-base= @course.duration.to_s + " horas"
  .fondoGris
    .container.py-6
      .flex.flex-wrap-mx-4.overflow-hidden
        %div{:class => "my-3 px-3 w-full overflow-hidden md:w-full lg:w-1/2"}
          .cuadroBlanco.py-6.h-full
            .content-center.text-center
              .font-medium.text-lg.leading-6.font-1 En este curso aprenderás:
              = @course.goals
        %div{:class => "my-3 px-3 w-full overflow-hidden md:w-full lg:w-1/2"}
          .cuadroBlanco.py-6.h-full
            .content-center.text-center
              .font-medium.text-lg.leading-6.font-1 Criterios de evaluación:
              = @course.evaluation

  =render template: './chapters/index'