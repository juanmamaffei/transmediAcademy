= form_for @course do |f|
  - if @course.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :goals
    = f.text_field :goals
  .field
    = f.label :duration
    = f.number_field :duration
  .field
    = f.label :evaluation
    = f.text_area :evaluation
  .field
    = f.label :visibility
    = f.check_box :visibility
  .actions
    = f.submit 'Save'
